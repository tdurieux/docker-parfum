    "process": "^0.11.10"
  },
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.8",
    "browserify": "^17.0.0",
    "jest": "^29.0.3",
    "tinyify": "^4.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.22",
    "typescript": "^4.8.4"
